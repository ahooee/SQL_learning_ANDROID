<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityha.AmoozeshActivity"
    android:orientation="vertical"
    android:id="@+id/drawer_amoozesh"
    android:background="#000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_asli_amoozesh"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/mostatil_abi_sarsafhe"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:id="@+id/toolbar_amoozesh"
            android:layout_marginTop="2sp"
            android:layout_marginStart="2sp"
            android:layout_marginEnd="2sp"

            />

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mostatil_sabz_kamrang"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/tablayout_linuxian"
            android:layoutDirection="ltr"
            app:tabIndicatorColor="#ff0076"
            app:tabIndicatorHeight="5sp"
            android:layout_margin="2sp"
            />

        <ir.linuxian.sql.komakkar.LinuxianViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pager_amoozesh"
            />













    </LinearLayout>













</androidx.drawerlayout.widget.DrawerLayout>